#!/bin/bash "source me"

CUDA=/usr/local/cuda-6.5 &&
HSAIL_TOOLS=$HOME/tmp/source/hsa/HSAIL-Tools/master.build &&
HSA_RUNTIME=$HOME/tmp/source/hsa/HSA-Runtime-Reference-Source/master &&
case $PATH in
  $CUDA/bin:$HSAIL_TOOLS/HSAILAsm:*) :;;
  *) PATH=$CUDA/bin:$HSAIL_TOOLS/HSAILAsm:$PATH;;
esac &&

T=$(T=$(dirname "$BASH_SOURCE") && cd "$T"/ && test -f ENV && echo "$PWD") &&

DEJAGNU=$T/build-nvptx-tools/dejagnu.exp &&
NVPTX_NONE_RUN=$T/install/offload-nvptx-none/bin/nvptx-none-run-single &&

CUDA_CACHE_PATH=/scratch/tschwing/.nv/ComputeCache &&

export CUDA CUDA_CACHE_PATH DEJAGNU HSA_RUNTIME NVPTX_NONE_RUN PATH T
